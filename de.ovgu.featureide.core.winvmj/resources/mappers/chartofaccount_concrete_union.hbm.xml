<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="aisco.chartofaccount.core.ChartOfAccountComponent" abstract="true">
        <id name="id" column="id"></id>
        <property name="code" column="code"></property>
        <property name="name" column="name"></property>
        <property name="description" column="description"></property>
        <property name="reference" column="reference"></property>

        <union-subclass name="aisco.chartofaccount.core.ChartOfAccountImpl" table = "chartofaccount_core" >
        </union-subclass>
    </class>
</hibernate-mapping>